{
  "name": "@ddd-qc/lit-happ-root",
  "workspaces": [
    "example",
    "packages/cell-proxy",
    "packages/lit-happ"
  ],
  "scripts": {
    "version"         : "hc --version && holochain --version && lair-keystore --version",
    "ci:tsc"          : "tsc --version",

    "build:happ"      : "npm run build:happ -w example",
    "build:example"   : "npm run build:happ && npm run build -w example",
    "build:libs"      : "npm run build -w packages/cell-proxy && npm run build -w packages/lit-happ",

    "start"           : "npm run start -w example",

    "devtest"         : "npm run build:libs && npm run build:example && npm run start",

    "clean"           : "bash scripts/clean.sh",
    "clean:npm"       : "bash scripts/clean-npm.sh",
    "clean:hc"        : "rm -rf .hc* && rm -rf we-applet/.hc*",
    "clean:all"       : "npm run clean:hc && npm run clean:npm && npm run clean"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ddd-mtl/dna-client.git"
  },
  "author": "",
  "license": "CAL-1.0",
  "bugs": {
    "url": "https://github.com/ddd-mtl/dna-client/issues"
  },
  "homepage": "https://github.com/ddd-mtl/dna-client#readme",
  "dependencies": {
    "@holochain-open-dev/core-types": "^0.5.0",
    "@holochain-open-dev/utils": "0.4.0",
    "@holochain/client": "^0.9.3",
    "@lit-labs/context": "^0.1.2",
    "@open-wc/scoped-elements": "^2.1.1",
    "lit": "^2.2.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "18.0.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@rollup/plugin-replace": "^2.4.2",
    "@rollup/plugin-typescript": "^8.2.1",
    "@types/ws": "^8.5.3",
    "gh-pages": "^3.1.0",
    "rollup": "^2.75.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "tslib": "^2.3.0",
    "typescript": "^4.3.5"
  }
}
